# Backend Environment Variables - Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-for-admin-operations

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Settings & Domain
CORS_ORIGINS=https://eduschedule.name.ng,http://localhost:5173
FRONTEND_URL=https://eduschedule.name.ng

# Payment Configuration - Paystack
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key

# AI Services Configuration
GEMINI_API_KEY=your-gemini-api-key-for-ranking
OPENAI_API_KEY=your-openai-api-key-for-explanations

# Frontend Environment Variables
VITE_API_BASE_URL=https://api.eduschedule.name.ng
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key

# Email Configuration (ZeptoMail by Zoho - Professional transactional emails)
MAIL_USERNAME=emailapikey
MAIL_PASSWORD=your-zepto-send-key-here
MAIL_FROM=noreply@eduschedule.name.ng
MAIL_FROM_NAME=EduSchedule
MAIL_PORT=587
MAIL_SERVER=smtp.zeptomail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Email Templates & Branding
TEMPLATE_FOLDER=templates
EMAIL_LOGO_URL=https://eduschedule.name.ng/logo.png
COMPANY_ADDRESS=EduSchedule Nigeria, Lagos State, Nigeria
SUPPORT_EMAIL=support@eduschedule.name.ng

# Environment
NODE_ENV=development
PYTHON_ENV=development
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Database Configuration (Optional - if using additional databases)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eduschedule
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration (Required for Celery task queue)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Production Security Settings
SECRET_KEY=your-super-secret-key-for-production-minimum-32-chars
SECURE_COOKIES=true
HTTPS_ONLY=false

# Scheduler Configuration
SCHEDULER_MAX_WORKERS=3
SCHEDULER_TIMEOUT_SECONDS=300
SOLUTION_LIMIT=5
MAX_CONSECUTIVE_PERIODS=4

# Task Queue Settings
TASK_MAX_RETRIES=3
TASK_RETRY_DELAY=60
TASK_SOFT_TIME_LIMIT=1800
TASK_HARD_TIME_LIMIT=3600

# Monitoring & Analytics (Optional)
SENTRY_DSN=https://your-sentry-dsn
ANALYTICS_ENABLED=false

# API Security
API_KEY_HEADER_NAME=X-API-KEY
API_KEY_PREFIX=edusk_

# Cache Settings
CACHE_TTL=300
CACHE_MAX_ENTRIES=1000

# Health Check Paths
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready

# Worker Configuration
WORKER_CONNECTIONS=1000
WORKER_COUNT=4

# External Services
WEBHOOK_SECRET=your-webhook-secret-for-external-services
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
